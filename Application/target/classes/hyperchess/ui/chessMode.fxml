<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hyperchess.ui.ChessMode">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <GridPane fx:id="chessBoard" centerShape="true" onMouseClicked="#clickGrid">
     <columnConstraints>
       <ColumnConstraints maxWidth="100" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="100" />
     </rowConstraints>
   </GridPane>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
</VBox>
